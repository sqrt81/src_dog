  <xacro:macro name="dummy_inertial">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <mass
        value="1E-5" />
      <inertia
        ixx="1E-9"
        ixy="0"
        ixz="0"
        iyy="1E-9"
        iyz="0"
        izz="1E-9" />
    </inertial>
  </xacro:macro>
  
  <xacro:macro name="motor_joint"
    params="joint *origin parent child *axis lower upper">
    <joint
      name="${joint}"
      type="revolute">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${child}" />
      <xacro:insert_block name="axis" />
      <dynamics
        damping="0.04"
        friction="0.09" />
      <limit
        lower="${lower}"
        upper="${upper}"
        effort="17"
        velocity="40" />
      <safety_controller
        soft_lower_limit="${lower + 0.01}"
        soft_upper_limit="${upper - 0.01}"
        k_velocity="100"
        k_position="1000" />
    </joint>
  </xacro:macro>
  
  <xacro:macro name="attach_foot" params="prefix">
    <link
      name="${prefix}_foot">
      <xacro:dummy_inertial />
      <collision name="${prefix}_foot_collision">
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <sphere
            radius="${FOOT_RADIUS}" />
        </geometry>
      </collision>
    </link>
  
    <joint
      name="${prefix}_fixed_foot"
      type="fixed">
      <origin
        xyz="0 0 -${SHIN_LEN}"
        rpy="0 0 0" />
      <parent
        link="${prefix}_shin" />
      <child
        link="${prefix}_foot" />
    </joint>
  </xacro:macro>
  
